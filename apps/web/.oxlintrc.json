{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": [
    "../../tooling/oxlint/oxlint-base.json",
    "../../tooling/oxlint/oxlint-nextjs.json",
    "../../tooling/oxlint/oxlint-react.json"
  ],
  "env": {
    "builtin": true,
    "commonjs": true,
    "browser": true,
    "es2022": true,
    "node": true
  },
  "globals": {
    "React": "writeable"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "**/*.config.js",
    "**/*.config.cjs",
    "**/.eslintrc.cjs",
    ".next",
    "dist",
    "build",
    "pnpm-lock.yaml",
    "public/*.js"
  ]
}
